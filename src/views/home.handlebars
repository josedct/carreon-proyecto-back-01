<div class="container p-4">
    <div class="row">
        <div class="col d-flex justify-content-center p-4">
            <h1 class="text-uppercase">list of products</h1>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {{#each products}}
            <div class="col d-flex justify-content-center">
                <div class="card h-100" style="width: 18rem;">
                    
                    {{#if this.thumbnails}} 
                        <img src="{{this.thumbnails.[0]}}" class="card-img-top h-25" alt="...">
                    {{else}}
                        <img src="img/image-not-avalible.jpg" class="card-img-top h-25" alt="">
                    {{/if}}
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> <h3 class="card-title"><span class="badge bg-secondary"> {{this.id}}</span> {{this.title}} </h3> </li>
                        <li class="list-group-item"> <span class="text-uppercase fw-bold">description:</span>  {{this.description}}</li>
                        <li class="list-group-item"> <span class="text-uppercase fw-bold">category:</span>  {{this.category}}</li>
                        <li class="list-group-item"> <span class="text-uppercase fw-bold">code:</span>  {{this.code}}</li>
                        <li class="list-group-item"> <span class="text-uppercase fw-bold">price:</span>  {{this.price}}</li>
                        {{#if this.status}}
                            <li class="list-group-item"> <span class="text-uppercase fw-bold">status:</span> available</li>
                        {{else}}
                            <li class="list-group-item"> <span class="text-uppercase fw-bold">status:</span> unavailable</li>
                        {{/if}}
                        <li class="list-group-item"> <span class="text-uppercase fw-bold">stock:</span>  {{this.stock}}</li>
                    </ul>

                </div>
            </div>
        {{/each}}
    </div>
</div>